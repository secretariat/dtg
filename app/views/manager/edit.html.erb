
<center><h3>Редактирование пользователя</h3></center>

<%= form_for( :manager, :url => {:controller => 'manager', :action => 'update', :id => @manager.id }) do |f| %>
 	<table>
			<tr>
				<th class="span4" align="left">ФИО Сотрудника:</th>
				<td><%= f.text_field(:pib) %></td>
			</tr>
			<tr>
				<th align="left">Название компании:</th>
				<td><%= f.text_field(:postion) %></td>
			</tr>
			<tr>
				<th align="left">Юридический адрес:</th>
				<td><%= f.text_field(:phone) %></td>
			</tr>
			<tr>
				<th align="left">Телефон:</th>
				<td><%= f.text_field(:email) %></td>
			</tr>
	</table>

	<br/>

	<div>
		 <%= submit_tag("Обновить", class: "btn btn-primary") %>
	</div>

<% end %>