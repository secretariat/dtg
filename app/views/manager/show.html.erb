<center><h3>Информация о Менеджере <i><%= @manager.pib %></i></h3><br/>
<div class="span5 offset3">
  <form class="form-horizontal">
    <fieldset>
      <div class="control-group">
        <label class="control-label"><b>ФИО: </b></label>
        <div class="controls">
          <span class="input-xlarge uneditable-input"><%= @manager.pib %></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><b>Должность: </b></label>
        <div class="controls">
          <span class="input-xlarge uneditable-input"><%= @manager.postion %></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><b>Телефон: </b></label>
        <div class="controls">
          <span class="input-xlarge uneditable-input"><%= @manager.phone %></span>
        </div>
      </div>  

      <div class="control-group">
        <label class="control-label"><b>Email: </b></label>
        <div class="controls">
          <span class="input-xlarge uneditable-input"><%= @manager.email %></span>
        </div>
      </div>  
    </fieldset>
  </form>
  <div class="span2 offset2">
    <%= link_to('Назад',{ :controller => 'admin', :action => 'index'}, :class => 'btn btn-info') %>
  </div>
</div>

