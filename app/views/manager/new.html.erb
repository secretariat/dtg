<center><h3>Создание нового менеджера</h3></center>
<div class="span4 offset4">
<%= form_for(:manager, :url => {:action => 'create'}) do |f| %>
 	<table>
		<tr>
			<th class="span2">ФИО:*</th>
			<td><%= f.text_field(:pib) %></td>
		</tr>
		<tr>
			<th>Должность:*</th>
			<td><%= f.text_field(:postion) %></td>
		</tr>	
		<tr>	
			<th>Телефон:*</th>
			<td><%= f.text_field(:phone) %></td>
		</tr>	
		<tr>	
			<th>Email:*</th>
			<td><%= f.text_field(:email) %></td>
		</tr>
		<%= form_for(:main, :url => {:action => 'create'}) do |f| %>
		<tr>
			<th>Логин:*</th>
			<td><%= f.text_field(:login) %></td>
		</tr>
		<tr>
			<th>Пароль:*</th>
			<td><%= f.text_field(:password) %></td><br/>
		<tr>
		<% end %>
	</table>

	

	<div class="span4 offset1">
		* - поля, обязательные для заполнения
		<br>
		<br>
		<%= f.submit "Создать", class: "btn btn-primary"%>
	</div>
<% end %>
</div>