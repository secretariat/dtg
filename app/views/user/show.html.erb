<center><h3>Информация о пользователе <i><%= @user.pib %></i></h3><br/>
    <table class="table table-bordered table-condensed table-stripped">
        <tr>
          <th>ФИО: </th>
          <th>Название компании: </th>
          <th>Юридический адрес: </th>
          <th>Телефон: </th>
          <th>Руководитель: </th>
          <th>Номер договора: </th>
          <th>Код ЕДРПО: </th>
          <th>Код в базе ГД: </th>
        </tr>
        <tr>
          <td class="input disabled"><%= @user.pib %></td>
          <td><%= @user.cname %></td>
          <td><%= @user.uaddr %></td>
          <td><%= @user.phone %></td>
          <td><%= @user.chef %></td>
          <td><%= @user.dognum %></td>
          <td><%= @user.edrpo %></td>
          <td><%= @user.gdcode %></td>
        </tr>
    </table>
    <div class="span2 offset5">
      <%= link_to('Назад',{ :controller => 'manager', :action => 'index'}, :class => 'btn btn-info') %>
    </div>
    <div class="span6 offset3">
      <form class="form-horizontal">
        <fieldset>
          <div class="control-group">
            <label class="control-label"><b>ФИО: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.pib %></span>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label"><b>Название компании: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.cname %></span>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label"><b>Юридический адрес: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.uaddr %></span>
            </div>
          </div>  

          <div class="control-group">
            <label class="control-label"><b>Телефон: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.phone %></span>
            </div>
          </div>  
          
          <div class="control-group">
            <label class="control-label"><b>Руководитель: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.chef %></span>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label"><b>Номер договора: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.dognum %></span>
            </div>
          </div>  

          <div class="control-group">
            <label class="control-label"><b>Код ЕДРПО: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.edrpo %></span>
            </div>
          </div>  

          <div class="control-group">
            <label class="control-label"><b>Код в базе ГД: </b></label>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @user.gdcode %></span>
            </div>
          </div>  
         
        </fieldset>
      </form>
    </div>

