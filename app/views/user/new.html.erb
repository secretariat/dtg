<br/>
<center><h3>Создание нового пользователя</h3></center>
<div class="span4 offset4">
	<%= form_for(@user, :url => {:action => 'create'},:html => {:name => 'form1'}) do |f| %>
	 	<table>
	 		<tbody id="goods">
			<tr>
				<th class="span4" align="left">ФИО Сотрудника:*</th>
				<td><%= f.text_field(:pib) %></td>
			</tr>
			<tr>
				<th align="left">Название компании:*</th>
				<td><%= f.text_field(:cname) %></td>
			</tr>
			<tr>
				<th align="left">Юридический адрес:*</th>
				<td><%= f.text_field(:uaddr) %></td>
			</tr>
			<tr>
				<th align="left">Телефон:*</th>
				<td><%= f.text_field(:phone) %></td>
			</tr>
			<tr>
				<th align="left">Руководитель:*</th>
				<td><%= f.text_field(:chef) %></td>
			</tr>
			<tr>
				<%= f.fields_for :dogovors do |builder| %>
					<%= render "dogovor_fields", :f => builder %>
				<% end %>
			</tr>
			</tbody>
			<tr>
				<td></td>
				<td class="pull-right">
					<%= link_to_add_fields "Добавить", f, :dogovors %>
				</td>
			</tr>
			<tr>
				<th align="left">Код ЕДРПО:*</th>
				<td><%= f.text_field(:edrpo) %></td>
			</tr>
			<tr>
				<th align="left">Код в базе ГД:*</th>
				<td><%= f.text_field(:gdcode) %></td>
			</tr>
			<tr>
				<th align="left">Email:*</th>
				<td><%= f.text_field(:email) %></td>
			</tr>
			<%= form_for(:main, :url => {:action => 'create'},:html => {:name => 'form2'}) do |m| %>
				<tr>
					<th align="left">Логин:*</th>
					<td><%= m.text_field(:login) %></td><br/>
				</tr>
				<tr>
					<th align="left">Пароль:*</th>
					<td><%= m.text_field(:password) %></td><br/>
				</tr>
			<% end %>
		</table>
		<br>
		<div class="span4 offset1">
			* - поля, обязательные для заполнения
			<br>
			<br>
			<%= f.submit "Создать", class: "btn btn-primary", :onclick => "return submitform();"%>
		</div>
	<% end %>
	<script type="text/javascript">
		function submitform()
		{
		  document.forms["form1"].submit();
		}
	</script>
</div>
<br>

