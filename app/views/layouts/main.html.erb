<!DOCTYPE html>
<html>
<head>
  <title>DTG LOGIN PAGE</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div class="row">	
			<% if !flash[:notice].blank? %>
		    <div class="alert alert-success">
		      <%= flash[:notice] %>
		    </div>
		  <% end %>
			<%= yield %>
		</div>
	</div>

</body>
</html>