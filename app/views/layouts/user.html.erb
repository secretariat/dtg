<!DOCTYPE html>
<html>
<head>
  <title>USER PAGE</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", "rails.validations" %>
  <%= csrf_meta_tags %>
</head>
<body>  
	<div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/user"><i class="icon-home"></i></a>
          <div class="nav-collapse">
            
          </div><!--/.nav-collapse -->

            <ul class="nav pull-right">
             <li class="divider-vertical"></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#hosting">
                  <i class="icon-user"></i>
                  <u><%=session[:login]%></u>
                  <b class="caret"></b>
                </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Выйти", :controller => 'main', :action => 'logout'%></li>
              </ul>
            </ul>      
        </div>
      </div>
  </div>
  <center>
    <%= image_tag "logo.png" %>
  </center>
	<div class="container">
		<div class="row">	
      <% if !flash[:notice].blank? %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
			<%= yield %>
		</div>
	</div>

</body>
</html>
